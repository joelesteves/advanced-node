{
  "compilerOptions": {
    "target": "ES2021",
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": true,
    "skipLibCheck":true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"],
      "@/tests/*":["../tests/* "]
    },
    "strict": true,
    // "strictNullChecks": true,
    // "strictFunctionTypes": true,
    // "strictPropertyInitialization": true,
    // "noImplicitAny": true

  },
  "include": ["src"]
}